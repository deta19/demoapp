{% extends 'adminbase.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <h2>Edit Combination #{{ combination.id }}</h2>

<form method="post">
<div class="mb-3">
    <label class="form-label">Brand</label>
    <input class="form-control" type="text" name="brand" value="{{ combination.brand }}">
    </div>
    <div class="mb-3">

    <label class="form-label">Number of Rooms</label>
    <input class="form-control" type="number" name="number_of_rooms" value="{{ combination.numberOfRooms }}">
    </div>
    <div class="mb-3">

    <label class="form-label">Cooling Capacity</label>
    <textarea class="form-control" name="cooling_capacity">{{ combination.coolingCapacity }}</textarea>
    </div>
    <div class="mb-3">

    <label class="form-label">Indoor Unit Type</label>
    <textarea class="form-control" name="indoor_unit_type">{{ combination.indoorUnitType }}</textarea>
    </div>
    <div class="mb-3">

    <label class="form-label">Combinations</label>
    <textarea class="form-control" name="combinations">{{ combination.combinations }}</textarea>
    </div>
    <div class="mb-3">

    <button class="btn btn-primary" type="submit">Update</button>
    </div>
</form>
{% endblock %}
