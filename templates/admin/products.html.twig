{% extends 'adminbase.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

        <h1>Products page âœ…</h1>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Colling capacity</th>
                    <th scope="col">Type</th>
                    <th scope="col">Brand</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
               <tr>
                   <td>{{ product.name }}</td>
                   <td>{{ product.coolingCapacity }}</td>
                   <td>{{ product.type }}</td>
                   <td>{{ product.brand }}</td>
               </tr>
           {% else %}
               <tr>
                   <td colspan="4">No products found.</td>
               </tr>
           {% endfor %}
            </tbody>
        </table>
{% endblock %}
