{% extends 'adminbase.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="row">
        <h1 class="col-12">Client selected data Combinations: </h1>
        <div class="col-12"><a class="btn btn-primary" href="{{ path('app_admin_client_combinations') }}">back to Combinations</a></div>
        {% for clientCombination in selectedCombination %}
           <div class="col-3  mt-5 border">
           <div class="col">Combination: {{ loop.index }}</div>
            {% for element in clientCombination %}
                <div class="col gap-3 text-start mt-3">
                   <div class="name">Name: {{ element.name }}</div>
                   <div  class="cooling_capacity">Cooling capacity: {{ element.cooling_capacity }}</div>
                   <div class="type">Type: {{ element.type }}</div>
                   <div class="brand">Brand: {{ element.brand }}</div>
               </div>
           {% endfor %}
           </div>

        {% else %}
            <div class="alert alert-success" role="alert">
               <td >No combinations found.</td>
           </div>
        {% endfor %}
    </div>
{% endblock %}
